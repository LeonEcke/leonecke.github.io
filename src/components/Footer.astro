---
import { Icon } from "astro-icon";
import ThemeToggle from "@components/ThemeToggle.astro";

const socials = [
  {
    name: "Linkedin",
    url: "https://www.linkedin.com/in/leon-eckerbom-685211231",
  },
  {
    name: "Resum√©",
    url: "/leon_cv.pdf",
  },
];
---

<footer
  class="sticky top-[100vh] p-4 bg-white sm:p-6 dark:bg-zinc-900 mx-auto max-w-6xl underline-offset-2 sm:pb-12 md:pb-12 lg:pb-12 md:flex md:justify-between"
>
  <section class="mb-6 md:mb-0 flex flex-wrap">
    <a href="/" class="flex items-center sm:pr-12" aria-label="mountain icon">
      <Icon name="mdi:stool" class="w-8 h-8" />
      <span
        class="self-center text-2xl font-bold whitespace-nowrap dark:text-white ml-3 mt-1"
        >Bpall</span
      >
    </a>
    <ul class="sm:border-l-[1px] sm:pl-12 text-zinc-800 dark:text-zinc-300 flex gap-8 text-base items-center text-zinc-600 dark:text-zinc-300">
      {
        socials.map(social => {
          return (
            <li>
              <a href={social.url} class="hover:underline" target="_blank">
                {social.name}
              </a>
            </li>
          );
        })
      }
    </ul>
  </section>
  <ThemeToggle/>
</footer>
